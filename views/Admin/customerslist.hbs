              </div>
              <div class="table-responsive col-sm-12">
                <table class="table align-items-center table-flush table-borderless ">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Cutomer Name</th>
                      <th>Email</th>
                      <th>Phone</th>
                      <th>Status</th>
                      <th>Manage</th>
                    </tr>
                  </thead>

                  <tbody>
                    {{#each user}}
                    <tr>
                      <td>{{this.index}}</td>
                      <td>{{this.username}}</td>
                      <td>{{this.email}}</td>
                      <td>{{this.phone}}</td>

                      <td id="status" class="">
                        {{#if this.status}}
                        Active
                        {{else}}
                        Blocked
                        {{/if}}
                      </td>

                      <td>
                        {{#if this.status}}
                        <a href="/admin/blockuseractive/{{this._id}}" class="btn btn-danger"
                          style="background-color: rgb(72, 20, 20);">Block</a>
                        {{else}}
                        <a href="/admin/blockuseractive/{{this._id}}" class="btn btn-success "
                          style="background-color: rgb(20, 72, 39);">Unblock</a>
                        {{/if}}
                      </td>
                    </tr>

                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!--End Row-->

        <!--End Dashboard Content-->

        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

      </div>
